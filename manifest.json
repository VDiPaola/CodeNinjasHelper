{
    "manifest_version": 3,
    "name": "Code Ninjas Helper",
    "version": "1.0.0",
    "description": "",
    "icons":{
        "128": "icon.png",
        "48": "icon.png",
        "16": "icon.png"
    },

    "permissions": [
        "tabs",
        "contextMenus",
        "activeTab",
        "scripting"
    ],

    "background":{
        "service_worker":"./js/background.js",
        "type": "module"
    },

    "content_scripts": [{
        "matches":    ["*://*/*"],
        "js":         ["./js/content-scripts/intellisense.js","./js/content-scripts/dom.js"]
    },{
        "css": [ "./css/main.css" ],
        "matches":    ["*://*/*"]
     } ],

     "host_permissions": [
        "https://gdp.code.ninja/*"
    ],

    "action": {
        "default_popup": "popup.html"
      }


}